<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Word"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/background_right_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/background_right_answer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_right_answer"
        app:layout_constraintEnd_toStartOf="@id/background_wrong_answer">

        <ImageView
            android:id="@+id/image_right_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_right_answer_visible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/background_wrong_answer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_wrong_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_wrong_answer"
            android:background="@drawable/ic_wrong_answer_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>


</android.support.constraint.ConstraintLayout>